{
  "compilerOptions": {
    "target": "ES2020",              // JavaScript version
    "module": "commonjs",            // Module system for Node.js
    "strict": true,                  // Enable strict type-checking options
    "esModuleInterop": true,         // Enable interop with CommonJS modules
    "skipLibCheck": true,            // Skip type checking of declaration files
    "outDir": "./dist",              // Output directory for compiled files
    "rootDir": "./server"               // Root directory of TypeScript files
  },
  "include": ["server/**/*"]            // Include all files in the 'src' folder
}